<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:id="@+id/user_ranking_template">

    <ImageView
        android:id="@+id/user_ranking_image"
        android:layout_width="298dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/user_ranking"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/user_ranking_medal"
        android:layout_width="90px"
        android:layout_height="120px"
        app:srcCompat="@drawable/ranking_medaile_1"
        android:layout_marginTop="0dp"
        android:layout_marginStart="260dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_ranking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        android:textColor="@color/blue"
        android:layout_marginTop="1dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/vt323"/>

    <TextView
        android:id="@+id/user_ranking_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        android:textColor="@color/blue"
        android:layout_marginTop="33dp"
        android:layout_marginStart="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/vt323"/>

    <TextView
        android:id="@+id/user_ranking_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        android:textColor="@color/blue"
        android:layout_marginTop="60dp"
        android:layout_marginStart="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/vt323"/>

</androidx.constraintlayout.widget.ConstraintLayout>