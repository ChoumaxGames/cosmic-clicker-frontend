<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity">

    <ImageView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btn_exit_shop"
        android:layout_width="192px"
        android:layout_height="198px"
        android:layout_marginStart="110px"
        android:layout_marginTop="110px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/exit" />

    <ImageView
        android:id="@+id/btn_upgrade1"
        android:layout_width="300px"
        android:layout_height="90px"
        android:layout_marginStart="600px"
        android:layout_marginTop="1190px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_upgrade" />

    <ImageView
        android:id="@+id/btn_upgrade2"
        android:layout_width="300px"
        android:layout_height="90px"
        android:layout_marginStart="600px"
        android:layout_marginTop="1670px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_upgrade" />

    <ImageView
        android:id="@+id/btn_multi1"
        android:layout_width="188px"
        android:layout_height="126px"
        android:layout_marginStart="190px"
        android:layout_marginTop="520px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boutton_multi" />

    <ImageView
        android:id="@+id/btn_multi10"
        android:layout_width="188px"
        android:layout_height="126px"
        android:layout_marginStart="440px"
        android:layout_marginTop="520px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boutton_multi" />

    <ImageView
        android:id="@+id/btn_multi100"
        android:layout_width="188px"
        android:layout_height="126px"
        android:layout_marginStart="690px"
        android:layout_marginTop="520px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boutton_multi" />

    <TextView
        android:id="@+id/txt_multi_x1"
        android:layout_width="188px"
        android:layout_height="126px"
        android:layout_marginStart="190px"
        android:layout_marginTop="510px"
        android:fontFamily="@font/vt323"
        android:text="x1"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_multi_x10"
        android:layout_width="188px"
        android:layout_height="126px"
        android:layout_marginStart="440px"
        android:layout_marginTop="510px"
        android:fontFamily="@font/vt323"
        android:text="x10"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_multi_x100"
        android:layout_width="188px"
        android:layout_height="126px"
        android:layout_marginStart="690px"
        android:layout_marginTop="510px"
        android:fontFamily="@font/vt323"
        android:text="x100"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>