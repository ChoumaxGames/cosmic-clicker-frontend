<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankingActivity">

  <ImageView
      android:id="@+id/settings"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="0dp"
      app:srcCompat="@drawable/ranking" />

  <ImageView
      android:id="@+id/btn_exit_ranking"
      android:layout_width="192px"
      android:layout_height="198px"
      android:layout_marginStart="110px"
      android:layout_marginTop="110px"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/exit" />

  <ScrollView
  android:layout_width="840px"
  android:layout_height="1495px"
  android:layout_marginStart="110px"
  android:layout_marginTop="425px"
  app:layout_constraintTop_toTopOf="parent"
  app:layout_constraintStart_toStartOf="parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>